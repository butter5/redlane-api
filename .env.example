# Application Configuration
# The name of your application
APP_NAME="Red Lane API"

# Application environment (local, staging, production)
APP_ENV=local

# Application key for encryption (generate with: php artisan key:generate)
APP_KEY=

# Enable debug mode (should be false in production)
APP_DEBUG=true

# Application timezone
APP_TIMEZONE=UTC

# Application URL (used for generating URLs in emails, etc.)
APP_URL=http://localhost:8000

# Localization settings
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance mode configuration
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP CLI server workers
PHP_CLI_SERVER_WORKERS=4

# Bcrypt hashing rounds
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
# Primary database connection (use mysql for production)
DB_CONNECTION=mysql

# MySQL Configuration (Docker service name: mysql)
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=laravel_password

# Session Configuration
# Driver: file, cookie, database, memcached, redis, dynamodb, array
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting Configuration
BROADCAST_CONNECTION=log

# Filesystem Configuration
FILESYSTEM_DISK=local

# Queue Configuration
# Driver: sync, database, beanstalkd, sqs, redis, null
QUEUE_CONNECTION=redis

# Cache Configuration
# Driver: apc, array, database, file, memcached, redis, dynamodb, octane, null
CACHE_STORE=redis
CACHE_PREFIX=redlane_cache

# Redis Configuration (Docker service name: redis)
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (using Mailhog for local development)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@redlane.local"
MAIL_FROM_NAME="${APP_NAME}"

# Sanctum Configuration (API authentication)
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:8000,127.0.0.1,127.0.0.1:8000

# AWS Configuration (if needed for S3, SES, etc.)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite Configuration (for frontend assets)
VITE_APP_NAME="${APP_NAME}"

# Pennant Feature Flag Configuration
# Driver: array, database
PENNANT_STORE=database
